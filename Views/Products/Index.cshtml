@model IEnumerable<DFA_CRUD.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-light text-dark" border="1">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pbrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pdescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pbrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pdescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Pid" class="text-warning"><i class="fa-sharp fa-solid fa-pen-to-square fa-2x" style="color:yellow;background-color:black;"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Pid" class="text-info"><i class="fa-solid fa-circle-info fa-2x" style="color:deepskyblue;background-color:black"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Pid" class="text-danger"><i class="fa-solid fa-trash fa-2x" style="color:red;background-color:black"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
